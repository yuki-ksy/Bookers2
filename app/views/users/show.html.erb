<%= notice %>

<div class="container">

  <div class="row">
    <div class="col-xs-3">
      <%= render 'users/user', user: @user, book: @book %>
    </div>

        <p id="notice"></p>

    <div class="col-xs-9">
      <table class="table table-hover table-inverse">
        <h2>Books</h2>
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
    <tr>
      <td>
       <%= link_to attachment_image_tag book.user, :profile_image, :fill, 40, 40, fallback:"none.png", size: '40x40' %>
      </td>

      <td>
        <%= link_to book_path(book) do %>
        <%= book.title %>
        <% end %>
      </td>
      <td>
        <%= book.body %>
      </td>

    </tr>
  </tbody>
  <% end %>


      </table>
    </div>
  </div>
</div>