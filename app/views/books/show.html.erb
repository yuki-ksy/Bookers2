<%= notice %>

<div class="container">
  <div class="row">
    <div class="col-xs-3">
      <%= render 'users/user', user: @user, book: @book_new %>
    </div>
    <p id="notice"></p>


<div class="col-xs-9">
      <table class="table table-inverse">
<h2>Book detail</h2>

<tbody>
    <tr>
      <td>
       <%= link_to user_path(@book.user) do %>
       <%= attachment_image_tag @book.user, :profile_image, :fill, 40, 40, fallback:"none.png", size: '40x40'  %>
       <div class = "username"><%= @book.user.name %></div>
       <% end %>
      </td>

      <td>
        <%= link_to @book.title, book_path(@book) %>
      </td>
      <td>
        <%= @book.body %>
      </td>
      <% if @book.user == current_user %>
      <td>
        <%= link_to 'Edit', edit_book_path, class: "btn btn-success" %>
      </td>
      <td>
        <%= link_to "Destroy", book_path(@book.id), method: :delete, "data-confirm" => "本当に消しますか？", class: "btn btn-danger" %>
      </td>
    </tr>
<% end %>
</tbody>
</table>
</div>
</div>
</div>
